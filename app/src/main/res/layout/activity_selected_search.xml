<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.iendo.ui.activity.CopyActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTitle="重置"
        app:rightTitleColor="@color/color_FF2525"
        app:rightTitleSize="@dimen/sp_14"
        app:title="病例搜索" />

    <com.company.iendo.widget.StatusLayout
        android:id="@+id/status_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="vertical">
                        <!--检查时间-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/shape_bg_writh"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15">

                            <TextView
                                android:id="@+id/tv_chek_date"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/dp_40"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:text="检查时间"
                                android:textColor="@color/black_000000"
                                android:textSize="@dimen/sp_15" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginRight="@dimen/dp_10"
                                android:background="@color/common_line_color" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/dp_14"
                                        android:layout_height="@dimen/dp_14"
                                        android:src="@drawable/ic_icon_check_thetime" />


                                    <com.hjq.shape.view.ShapeTextView
                                        android:id="@+id/sp_start_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_40"
                                        android:layout_marginLeft="@dimen/dp_20"
                                        android:layout_marginRight="@dimen/dp_9"
                                        android:gravity="center_vertical"
                                        android:text="2021-12-26"
                                        android:textColor="@color/color_9A9A9A"
                                        android:textSize="@dimen/sp_13"
                                        app:shape="rectangle"
                                        app:shape_strokeColor="@color/color_9A9A9A" />

                                    <ImageView
                                        android:layout_width="@dimen/dp_14"
                                        android:layout_height="@dimen/dp_14"
                                        android:src="@drawable/selector_detail_dialog" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:text="至"
                                        android:textColor="@color/black_000000"
                                        android:textSize="@dimen/sp_13" />


                                    <com.hjq.shape.view.ShapeTextView
                                        android:id="@+id/sp_end_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/dp_40"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="@dimen/dp_10"
                                        android:layout_marginRight="@dimen/dp_9"
                                        android:gravity="center"
                                        android:text="2021-12-28"
                                        android:textColor="@color/color_9A9A9A"
                                        android:textSize="@dimen/sp_13"
                                        app:shape="rectangle"
                                        app:shape_strokeColor="@color/color_9A9A9A" />

                                    <ImageView
                                        android:layout_width="@dimen/dp_14"
                                        android:layout_height="@dimen/dp_14"
                                        android:src="@drawable/ic_icon_an" />

                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_15"
                            android:background="@drawable/shape_bg_writh"
                            android:orientation="vertical"
                            android:paddingLeft="@dimen/dp_15"
                            android:paddingRight="@dimen/dp_15">

                            <!--检查号,姓名-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_40"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_chek_num"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_weight="1"
                                        android:text="检查号"
                                        android:textColor="@color/black_000000"
                                        android:textSize="@dimen/sp_15" />

                                    <TextView
                                        android:id="@+id/tv_yibaohao"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/text_01"
                                        android:layout_weight="1"
                                        android:text="医保号"
                                        android:textColor="@color/black_000000"
                                        android:textSize="@dimen/sp_15" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_9"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_checkno_" />


                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_check_num"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="请输入检查号"
                                    android:lines="1"
                                    android:singleLine="true"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />


                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_9"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_checkno_" />


                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_yibaohao"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="请输入医保号"
                                    android:singleLine="true"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/common_line_color" />

                            <!--年龄,性别-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:text="姓名"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="性别"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_11"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_age" />

                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_check_name"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="请输入姓名"
                                    android:singleLine="true"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_13"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_gender" />

                                <TextView
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/tv_sex_type"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:drawableRight="@drawable/selector_detail_dialog_search"
                                    android:gravity="center_vertical"
                                    android:text="请选择性别"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/common_line_color" />

                            <!--年龄,性别-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_age"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:text="年龄"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text=""
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="5">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tv_mid"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerInParent="true"
                                        android:text="至"
                                        android:textColor="@color/color_9A9A9A"
                                        android:textSize="@dimen/sp_13" />

                                    <EditText
                                        android:id="@+id/edit_age_start"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_35"
                                        android:layout_centerVertical="true"
                                        android:layout_toLeftOf="@+id/tv_mid"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:hint="请输入姓名"
                                        android:singleLine="true"
                                        android:textColor="@color/color_9A9A9A"
                                        android:textColorHint="@color/color_9A9A9A"
                                        android:textSize="@dimen/sp_13" />

                                    <EditText
                                        android:id="@+id/edit_age_end"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dp_35"
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/tv_mid"
                                        android:layout_weight="1"
                                        android:background="@null"
                                        android:hint="请输入姓名"
                                        android:paddingLeft="@dimen/dp_10"
                                        android:singleLine="true"
                                        android:textColor="@color/color_9A9A9A"
                                        android:textColorHint="@color/color_9A9A9A"
                                        android:textSize="@dimen/sp_13" />


                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="2"
                                    android:orientation="horizontal">

                                    <View
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/common_line_color" />

                                    <TextView
                                        android:id="@+id/tv_age_type"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="岁"
                                        android:textColor="@color/color_9A9A9A"
                                        android:textSize="@dimen/sp_13" />

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginRight="@dimen/dp_10"
                                        android:background="@color/common_line_color" />

                                    <ImageView
                                        android:id="@+id/iv_age"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:src="@drawable/selector_detail_dialog_search" />


                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/common_line_color" />

                            <!--职业,婚否-->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_worker"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:text="职业"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="婚否"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_7"
                                    android:layout_height="@dimen/dp_17"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_professional" />

                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_worker"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    android:hint="请选择职业"
                                    android:inputType="phone"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_12"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_maritalstatus" />

                                <TextView
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/tv_married_type"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:drawableRight="@drawable/selector_detail_dialog_search"
                                    android:gravity="center_vertical"
                                    android:text="请选择婚否"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/common_line_color" />


                            <!--科室,设备-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_section"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:text="科室"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="设备"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_13"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_department" />


                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_section"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    
                                    android:hint="请选择科室"
                                    android:inputType="phone"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_13"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_equipment" />

                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_device"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    
                                    android:gravity="center_vertical"
                                    android:hint="请选择设备"
                                    android:inputType="phone"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:background="@color/common_line_color" />


                            <!--检查医生,送检医生-->


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">


                                <TextView
                                    android:id="@+id/tv_check_doctor"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_weight="1"
                                    android:text="检查医生"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="送检医生"
                                    android:textColor="@color/black_000000"
                                    android:textSize="@dimen/sp_14" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_40"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dp_13"
                                    android:layout_height="@dimen/dp_15"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_checkthedoctor" />


                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_check_doctor"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    
                                    android:hint="请选择检查医生"
                                    android:inputType="phone"
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />

                                <ImageView
                                    android:layout_width="@dimen/dp_14"
                                    android:layout_height="@dimen/dp_16"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/dp_1"
                                    android:src="@drawable/ic_icon_reviewthedoctor" />

                                <EditText
                                    android:paddingLeft="@dimen/dp_5"
                                    android:id="@+id/edit_get_doctor"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/dp_35"
                                    android:layout_weight="1"
                                    android:background="@null"
                                    
                                    android:gravity="center_vertical"
                                    android:hint="请选择送检医生"
                                    android:inputType="phone"
                                    android:text=""
                                    android:textColor="@color/color_9A9A9A"
                                    android:textColorHint="@color/color_9A9A9A"
                                    android:textSize="@dimen/sp_13" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <com.hjq.shape.view.ShapeButton
                            android:id="@+id/sp_search"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp_40"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="搜索"
                            android:textColor="@color/color_25A5FF"
