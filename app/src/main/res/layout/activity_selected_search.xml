<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.iendo.ui.activity.CopyActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="搜索" />

    <com.company.iendo.widget.StatusLayout
        android:id="@+id/status_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">
                <!--检查时间-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_chek_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="检查时间"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tv_right"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv_mid"
                        android:text="至"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <com.hjq.shape.view.ShapeTextView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:id="@+id/sp_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_mid"
                        android:layout_toRightOf="@+id/tv_chek_date"
                        android:gravity="center"
                        android:text="2021-12-26"
                        android:padding="10dp"

                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:shape="rectangle"
                        app:shape_strokeColor="@color/black40"
                        app:shape_strokeWidth="1dp" />

                    <com.hjq.shape.view.ShapeTextView
                        android:id="@+id/sp_end_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_right"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="2021-12-28"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        app:shape="rectangle"
                        app:shape_strokeColor="@color/black40"
                        app:shape_strokeWidth="1dp" />

                </RelativeLayout>

                <!--检查号,姓名-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:id="@+id/tv_chek_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="检查号"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/text_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_toRightOf="@+id/text_01"
                        android:text="姓名"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_check_num"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toLeftOf="@+id/text_01"
                        android:layout_toRightOf="@+id/tv_chek_num"
                        android:background="@drawable/shape_cme_login" />

                    <EditText
                        android:id="@+id/edit_check_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:layout_toRightOf="@+id/tv_name"
                        android:background="@drawable/shape_cme_login" />


                </RelativeLayout>
                <!--年龄,性别-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">
                    <!--年龄-->
                    <LinearLayout
                        android:id="@+id/linear_age"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="年龄"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <EditText
                            android:id="@+id/edit_start_age"
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_35"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/shape_cme_login"
                            android:inputType="phone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:text="至"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <EditText
                            android:id="@+id/edit_end_age"
                            android:layout_width="@dimen/dp_32"
                            android:layout_height="@dimen/dp_35"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@drawable/shape_cme_login"
                            android:inputType="phone" />

                        <TextView

                            android:id="@+id/tv_age_type"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:drawablePadding="@dimen/dp_5"
                            android:background="@drawable/shape_cme_login"
                            android:drawableRight="@drawable/icon_search_down"
                            android:gravity="center_vertical"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingLeft="@dimen/dp_10"
                            android:text="岁"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>



                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_50"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_30"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/tv_sex_type"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_35"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:background="@drawable/shape_cme_login"
                            android:drawableRight="@drawable/icon_search_down"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_10"
                            android:text="全部"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_14" />


                    </LinearLayout>

                </RelativeLayout>

                <!--职业,婚否-->
                <!--年龄-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_worker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="职业"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_worker"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_cme_login" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="婚否"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />


                    <TextView
                        android:id="@+id/tv_married_type"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_35"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_cme_login"
                        android:drawableRight="@drawable/icon_search_down"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp_5"
                        android:text="全部"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />


                </LinearLayout>

                <!--科室,设备-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="科室"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_section"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_cme_login" />

                    <TextView
                        android:id="@+id/tv_device"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="设备"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_device"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_cme_login" />


                </LinearLayout>
                <!--检查医生,送检医生-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_50"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_check_doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="检查医生"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_check_doctor"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_cme_login" />

                    <TextView
                        android:id="@+id/tv_get_doctor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:text="送检医生"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/edit_get_doctor"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:background="@drawable/shape_cme_login" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.hjq.shape.view.ShapeButton
                    android:id="@+id/sp_restart"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="重置"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:shape="rectangle"
                    app:shape_radius="20dp"
                    app:shape_solidColor="#5A8DDF"
                    app:shape_solidPressedColor="#AA5A8DDF" />

                <com.hjq.shape.view.ShapeButton
                    android:id="@+id/sp_search"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_50"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="搜索"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:shape="rectangle"
                    app:shape_radius="20dp"
                    app:shape_solidColor="#5A8DDF"
                    app:shape_solidPressedColor="#AA5A8DDF" />


            </LinearLayout>

        </RelativeLayout>


    </com.company.iendo.widget.StatusLayout>
</LinearLayout>