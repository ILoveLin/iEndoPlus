<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <!--    android:background="@drawable/selector_item_ffffff"-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp_10"

        app:cardElevation="@dimen/dp_5">
<!--        android:background="@drawable/R.drawable.shape_bg_chose_picture_pre"-->
<!--        android:layout_marginTop="@dimen/dp_10"-->
<!--        android:layout_marginBottom="@dimen/dp_10"-->
        <RelativeLayout
            android:id="@+id/relative_item_all"
            android:background="@drawable/shape_bg_chose_picture_pre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_51"
                    android:layout_height="@dimen/dp_53"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_1"
                    android:src="@drawable/ic_icon_thepatient" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_case_name"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="张大仙"
                        android:textColor="@color/color_0C0C0C"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_case_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="0岁"
                        android:textColor="@color/color_0C0C0C"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/iv_sex_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="男"
                        android:textColor="@color/color_0C0C0C"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_top"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="检查号"
                    android:textColor="@color/color_0C0C0C"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_case_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_2"
                    android:gravity="center_vertical"
                    android:text="2021091331"
                    android:textColor="@color/color_9B9B9B"
                    android:textSize="@dimen/sp_11" />

            </LinearLayout>


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>