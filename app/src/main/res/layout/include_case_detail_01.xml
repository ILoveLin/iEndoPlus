<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">
    <!--基本-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_15"
        android:gravity="center"
        android:text="基本信息"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_bg_writh"
        android:orientation="vertical">
        <!--01=检查号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/CaseTextViewStyle"
                android:layout_gravity="center_vertical"
                android:text="检查号" />


            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_01_check_num"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1"
                android:maxLength="20"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:lines="1"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black80"
                android:textColorHint="@color/black20"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />
        <!--02=姓名-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">


            <TextView
                style="@style/CaseTextViewStyle"
                android:text="姓名" />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_01_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@null"
                android:maxLength="50"
                android:gravity="right|center_vertical"
                android:hint=""
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black80"
                android:textColorHint="@color/black20"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />

        <!--03=性别-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:orientation="horizontal">

                <TextView
                    style="@style/CaseTextViewStyle"
                    android:layout_gravity="center"
                    android:text="性别" />

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/et_01_sex_type"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:layout_weight="1"
                    android:background="@null"
                    android:focusable="false"
                    android:gravity="right|center_vertical"
                    android:hint=""
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textColorHint="@color/black20"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iv_01_sex_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/selector_detail_dialog" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />


        <!--04=年龄-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/CaseTextViewStyle"
                android:layout_gravity="center_vertical"
                android:text="年龄" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="5"
                android:orientation="horizontal">

                <com.hjq.widget.view.ClearEditText
                    android:id="@+id/et_01_age"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_35"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入年龄"
                    android:inputType="phone"
                    android:lines="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/black80"
                    android:textColorHint="@color/black20"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_01_age_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right"
                    android:paddingRight="@dimen/dp_10"
                    android:text="岁"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iv_01_age_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:src="@drawable/selector_detail_dialog" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />

        <!--05=职业-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/CaseTextViewStyle"
                android:text="职业" />


            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_01_jop"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="false"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="200"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black80"
                android:textColorHint="@color/black20"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_01_jop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/ic_case_select_down_nor" />
            <!--                android:src="@drawable/selector_detail_dialog" />-->


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />

        <!--06=收费-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/CaseTextViewStyle"
                android:text="收费" />

            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_01_fee"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint=""
                android:lines="1"
                android:maxLength="50"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black80"
                android:textColorHint="@color/black20"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />


        <!--07=送检医生-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10">

            <TextView
                style="@style/CaseTextViewStyle"
                android:text="送检医生" />


            <com.hjq.widget.view.ClearEditText
                android:id="@+id/et_01_get_check_doctor"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_35"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="false"
                android:gravity="right|center_vertical"
                android:hint=""
                android:maxLength="20"
                android:lines="1"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black80"
                android:textColorHint="@color/black20"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/tv_01_get_check_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/selector_detail_dialog" />


        </LinearLayout>
    </LinearLayout>


    <!--08=主诉特殊字数限制edittext-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_bg_writh"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_10"
                android:text="主诉"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_01_i_tell_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/selector_detail_dialog" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/common_line_color" />

        <com.company.iendo.widget.LinesEditView
            android:id="@+id/et_01_i_tell_you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"

            app:classic_maxCount="800"
            app:classic_showPositive="true" />

