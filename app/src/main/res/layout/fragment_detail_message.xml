<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.company.iendo.widget.StatusLayout
        android:id="@+id/detail_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.hjq.widget.view.ClearEditText
                        android:id="@+id/clearedit"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_50"
                        android:layout_margin="@dimen/dp_50" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/detail_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/clearedit"
                         android:layout_gravity="center"
                        android:background="@color/common_accent_color"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="这是一个宽高比 2:1 的FrameLayout"
                        android:textColor="@color/white" />
                </RelativeLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </com.company.iendo.widget.StatusLayout>

</LinearLayout>