<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.iendo.ui.activity.CopyActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rightTitle="重置"
        app:rightTitleColor="@color/color_FF2525"
        app:title="设备参数" />

    <com.company.iendo.widget.StatusLayout
        android:id="@+id/status_hint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="当前设备"
                    android:textColor="@color/color_0C0C0C"
                    android:textSize="@dimen/sp_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/shape_bg_device_params"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ic_icon_change_thepassword" />

                    <TextView
                        android:id="@+id/tv_device_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="耳鼻喉治疗台"
                        android:textColor="@color/color_0C0C0C"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_device_code_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="Code码:CD-ZHEBGH-7892"
                        android:textColor="@color/color_9A9A9A"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="设备参数"
                    android:textColor="@color/color_0C0C0C"
                    android:textSize="@dimen/sp_14" />
                <!--光源-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/shape_bg_device_params"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ic_icon_change_thepassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="光源"
                        android:textColor="@color/color_0C0C0C"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <com.hjq.widget.view.SwitchButton
                        android:id="@+id/sb_find_switch_light"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />

                </LinearLayout>
                <!--血管增强-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_device_params"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:src="@drawable/ic_icon_change_thepassword" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="血管增强"
                        android:textColor="@color/color_0C0C0C"
                        android:textSize="@dimen/sp_13" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1px"
                        android:layout_weight="1" />

                    <com.hjq.widget.view.SwitchButton
                        android:id="@+id/sb_find_switch_blood"
                        android:layout_width="@dimen/dp_35"
                        android:layout_height="@dimen/dp_22"
                        android:layout_marginRight="@dimen/dp_10"
                        android:checked="true" />

                </LinearLayout>
                <!--白平衡-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_device_params"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/ic_icon_change_thepassword" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="白平衡"
                            android:textColor="@color/color_0C0C0C"
                            android:textSize="@dimen/sp_13" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <com.hjq.widget.view.ClearEditText
                            android:id="@+id/edit_light"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="可手动输入数值"
                            android:inputType="number"

                            android:maxLength="3"
                            android:lines="1"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_3"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_0C0C0C"
                            android:textColorHint="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="lm"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="暗"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_12" />

                        <com.jaygoo.widget.RangeSeekBar
                            android:id="@+id/sb_single_balance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:rsb_gravity="center"
                            app:rsb_indicator_background_color="@color/color_25A5FF"
                            app:rsb_indicator_height="wrap_content"
                            app:rsb_indicator_padding_bottom="@dimen/dp_5"
                            app:rsb_indicator_padding_left="@dimen/dp_7"
                            app:rsb_indicator_padding_right="@dimen/dp_7"
                            app:rsb_indicator_padding_top="@dimen/dp_5"
                            app:rsb_indicator_radius="5dp"
                            app:rsb_indicator_show_mode="alwaysShow"
                            app:rsb_indicator_text_size="@dimen/sp_10"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/color_25A5FF"
                            app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
                            app:rsb_thumb_drawable="@drawable/thumb_activated"
                            app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
                            app:rsb_tick_mark_mode="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="明"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>


                </LinearLayout>
                <!--实时压力-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_device_params"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/ic_icon_change_thepassword" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="实时压力"
                            android:textColor="@color/color_0C0C0C"
                            android:textSize="@dimen/sp_13" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <com.hjq.widget.view.ClearEditText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="可手动输入数值"
                            android:inputType="number"
                            android:maxLength="3"
                            android:id="@+id/edit_pressure"
                            android:lines="1"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_3"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_0C0C0C"
                            android:textColorHint="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="mmHg"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="低"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_12" />

                        <com.jaygoo.widget.RangeSeekBar
                            android:id="@+id/sb_single_pressure"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:rsb_gravity="center"
                            app:rsb_indicator_background_color="@color/color_25A5FF"
                            app:rsb_indicator_height="wrap_content"
                            app:rsb_indicator_padding_bottom="@dimen/dp_5"
                            app:rsb_indicator_padding_left="@dimen/dp_7"
                            app:rsb_indicator_padding_right="@dimen/dp_7"
                            app:rsb_indicator_padding_top="@dimen/dp_5"
                            app:rsb_indicator_radius="5dp"
                            app:rsb_indicator_show_mode="alwaysShow"
                            app:rsb_indicator_text_size="@dimen/sp_10"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/color_25A5FF"
                            app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
                            app:rsb_thumb_drawable="@drawable/thumb_activated"
                            app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
                            app:rsb_tick_mark_mode="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="高"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>


                </LinearLayout>
                <!--流量-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@drawable/shape_bg_device_params"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_45"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/ic_icon_change_thepassword" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="流量"
                            android:textColor="@color/color_0C0C0C"
                            android:textSize="@dimen/sp_13" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <com.hjq.widget.view.ClearEditText
                            android:id="@+id/edit_flow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center_vertical"
                            android:hint="可手动输入数值"
                            android:inputType="number"
                            android:maxLength="3"
                            android:lines="1"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_3"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@color/color_0C0C0C"
                            android:textColorHint="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_10"
                            android:text="s / ml"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_15"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_10"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="小"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_12" />

                        <com.jaygoo.widget.RangeSeekBar
                            android:id="@+id/sb_single_flow"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:rsb_gravity="center"
                            app:rsb_indicator_background_color="@color/color_25A5FF"
                            app:rsb_indicator_height="wrap_content"
                            app:rsb_indicator_padding_bottom="@dimen/dp_5"
                            app:rsb_indicator_padding_left="@dimen/dp_7"
                            app:rsb_indicator_padding_right="@dimen/dp_7"
                            app:rsb_indicator_padding_top="@dimen/dp_5"
                            app:rsb_indicator_radius="5dp"
                            app:rsb_indicator_show_mode="alwaysShow"
                            app:rsb_indicator_text_size="@dimen/sp_10"
                            app:rsb_mode="single"
                            app:rsb_progress_color="@color/color_25A5FF"
                            app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
                            app:rsb_thumb_drawable="@drawable/thumb_activated"
                            app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
                            app:rsb_tick_mark_mode="number" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="大"
                            android:textColor="@color/color_9A9A9A"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_40"
                    android:text="您可手动输入数值对设备参数进行调整!"
                    android:textColor="@color/color_9A9A9A"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </com.company.iendo.widget.StatusLayout>
</LinearLayout>