<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.company.iendo.ui.activity.CopyActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="图像采集" />

<!--    <androidx.core.widget.NestedScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->
<!--    </androidx.core.widget.NestedScrollView>-->
    <!--纯滚动模式-->
    <!--app:srlEnablePureScrollMode="true"-->
    <!--刷新和加载更多设置-->
    <!--app:srlEnableAutoLoadMore="false"-->
    <!--app:srlEnableLoadMore="true"-->

        <com.company.iendo.widget.StatusLayout
            android:id="@+id/picture_status_hint"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/ff_player_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_210"
                    android:background="@color/black">

                    <!--视频界面-->
                    <com.company.iendo.widget.vlc.MyVlcVideoView
                        android:id="@+id/player"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_210"
                        android:background="@color/black"
                        android:clickable="true" />


                    <!--标题等等-->
                    <RelativeLayout
                        android:id="@+id/relative_top_control"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentTop="true"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/video_back"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="@dimen/dp_40"
                            android:paddingLeft="@dimen/dp_10"
                            android:scaleType="centerInside"
                            android:src="@drawable/video_back"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="神州直播"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15"
                            android:visibility="invisible" />
                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/lock_screen"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginRight="50dp"
                        android:background="@drawable/shape_bg_vlc_lock"
                        android:padding="@dimen/dp_2"
                        android:scaleType="centerInside"
                        android:src="@drawable/video_lock_open_ic"
                        android:tag="unLock"
                        android:visibility="visible" />


                    <com.company.iendo.widget.vlc.ENDownloadView
                        android:id="@+id/control_load_view"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="visible" />

                    <com.company.iendo.widget.vlc.ENPlayView
                        android:id="@+id/control_start_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:visibility="invisible" />
                    <!--时间 全屏-->
                    <RelativeLayout
                        android:id="@+id/relative_bottom_control"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:gravity="bottom"
                            android:paddingLeft="@dimen/dp_10"
                            android:text="00:00"
                            android:textColor="@color/white" />

                        <TextView
                            android:layout_alignParentBottom="true"
                            android:id="@+id/full_change"
                            android:paddingTop="@dimen/dp_5"
                            android:layout_marginBottom="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableRight="@drawable/nur_ic_fangda"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10" />

                    </RelativeLayout>

                </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_below="@+id/ff_player_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!--录像 截图 冻结 语音-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_65">

                    <LinearLayout
                        android:id="@+id/linear_record"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_recode"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginTop="@dimen/dp_23"
                            android:src="@drawable/ic_icon_record" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/case_record"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:tag="录像中"
                            android:text="录像"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_picture"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_shot"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_24"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@drawable/ic_icon_get_the_picture" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/case_picture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:text="采图"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linear_cold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_8"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_code"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/dp_26"
                            android:layout_height="@dimen/dp_26"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@drawable/ic_icon_cold" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/case_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:gravity="center"
                            android:text="冻结"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linear_mic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_marginRight="@dimen/dp_16"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_mic"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/dp_17"
                            android:layout_height="@dimen/dp_27"
                            android:layout_marginTop="@dimen/dp_16"
                            android:src="@drawable/ic_icon_voice_calls" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/case_down"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_6"
                            android:layout_marginBottom="@dimen/dp_6"
                            android:gravity="center"
                            android:text="语音通话"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                </LinearLayout>
                <!--光源 血管增强 白平衡-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="vertical">
                    <!--光源-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_bg_device_params"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:src="@drawable/ic_icon_lightsource" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="光源"
                                android:textColor="@color/color_0C0C0C"
                                android:textSize="@dimen/sp_12" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1px"
                                android:layout_weight="1" />

                            <com.hjq.widget.view.ClearEditText
                                android:id="@+id/edit_light"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="right|center_vertical"
                                android:hint="可手动输入数值"
                                android:imeOptions="actionSend"
                                android:inputType="number"
                                android:lines="1"
                                android:maxLength="3"
                                android:paddingLeft="@dimen/dp_10"
                                android:paddingRight="@dimen/dp_3"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/color_0C0C0C"
                                android:textColorHint="@color/color_9A9A9A"
                                android:textSize="@dimen/sp_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp_10"
                                android:text=""
                                android:textColor="@color/color_9A9A9A"
                                android:textSize="@dimen/sp_12" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:background="@color/colorLine" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_10"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_9A9A9A"
                                android:textSize="@dimen/sp_11" />

                            <com.jaygoo.widget.RangeSeekBar
                                android:id="@+id/sb_single_light"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:rsb_gravity="center"
                                app:rsb_indicator_background_color="@color/color_25A5FF"
                                app:rsb_indicator_height="wrap_content"
                                app:rsb_indicator_padding_bottom="@dimen/dp_5"
                                app:rsb_indicator_padding_left="@dimen/dp_7"
                                app:rsb_indicator_padding_right="@dimen/dp_7"
                                app:rsb_indicator_padding_top="@dimen/dp_5"
                                app:rsb_indicator_radius="5dp"
                                app:rsb_indicator_show_mode="alwaysShow"
                                app:rsb_indicator_text_size="@dimen/sp_10"
                                app:rsb_mode="single"
                                app:rsb_progress_color="@color/color_25A5FF"
                                app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
                                app:rsb_thumb_drawable="@drawable/thumb_activated"
                                app:rsb_thumb_inactivated_drawable="@drawable/thumb_inactivated"
                                app:rsb_tick_mark_mode="number" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textColor="@color/color_9A9A9A"
                                android:textSize="@dimen/sp_11" />
                        </LinearLayout>


                    </LinearLayout>
                    <!--血管增强-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_10"
                        android:background="@drawable/shape_bg_device_params"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/ic_icon_vascularenhancement" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="血管增强"
                            android:textColor="@color/color_0C0C0C"
                            android:textSize="@dimen/sp_12" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <com.hjq.widget.view.SwitchButton
                            android:id="@+id/sb_find_switch_blood"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginRight="@dimen/dp_10"
                            android:checked="true" />

                    </LinearLayout>
                    <!--光源-->
                    <LinearLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="@drawable/shape_bg_device_params"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:src="@drawable/ic_icon_whitebalance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="白平衡"
                            android:textColor="@color/color_0C0C0C"
                            android:textSize="@dimen/sp_12" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1px"
                            android:layout_weight="1" />

                        <com.hjq.widget.view.SwitchButton
                            android:id="@+id/sb_find_switch_white"
                            android:layout_width="@dimen/dp_35"
                            android:layout_height="@dimen/dp_22"
                            android:layout_marginRight="@dimen/dp_10"
                            android:checked="true" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
                <!--纯滚动模式-->
                <!--app:srlEnablePureScrollMode="true"-->
                <!--刷新和加载更多设置-->
                <!--app:srlEnableAutoLoadMore="false"-->
                <!--app:srlEnableLoadMore="true"-->






            </RelativeLayout>


        </com.company.iendo.widget.StatusLayout>



</LinearLayout>